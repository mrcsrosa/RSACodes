			<script>
				document.getElementById("ativo").value = "{{ativo}}"
				document.getElementById("ativo").disabled = true
				document.getElementById("tipoativo").value = "{{tipoativo}}"
				document.getElementById("tipoativo").disabled = true
				document.getElementById("propriedade").value = "{{tipopropriedade}}"
				document.getElementById("propriedade").disabled = true
				document.getElementById("descricao").value = "{{descricao}}"
				document.getElementById("descricao").disabled = true
				document.getElementById("serie").value = "{{serie}}"
				document.getElementById("serie").disabled = true
				document.getElementById("fabricacao").disabled = true
				document.getElementById("fabricacao").value = "{{fabricadoem}}"
				document.getElementById("alocado").disabled = true
				document.getElementById("alocado").value = "{{localalocado}}"
				function pageUpdate() {
					alert('Lendo a pagina')
				}

				function selectLista() {
					alert('Mudou a lista')
				}

				function enableEdit() {
					b = document.getElementById("btUpdate")
					if ( b.value === "STEP1")
					{
						b.value = "STEP2"
						return
					}
					document.getElementById("ativo").disabled = false
					document.getElementById("tipoativo").disabled = false
					document.getElementById("propriedade").disabled = false
					document.getElementById("descricao").disabled = false
					document.getElementById("serie").disabled = false
					document.getElementById("fabricacao").disabled = false
					document.getElementById("alocado").disabled = false
					document.getElementById("btUpdate").innerText = "SAVE"
					b.value =  "STEP1" 
				}
			</script>
		{{/with}}
	{{/if}}
